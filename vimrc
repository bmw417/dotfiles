" line numbers
set number

" tab and autotab stuff
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

" colors and theme
colorscheme desert
syntax on

" set column to 80 chars, good for terminal
set colorcolumn=80

" horizontal rule on current line
set cursorline

" command line completion
set wildmenu

" show partial commands in last line
set showcmd

" highlight search terms
set hlsearch

" better autocompletion (zsh-like)
set ignorecase
set smartcase
